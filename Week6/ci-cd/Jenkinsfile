pipeline {
    agent any
    environment {
        TF_VAR_ENV = 'dev'
    }
    stages {
        stage('Checkout') {
            steps {
                echo "ğŸ§¹ Cleaning workspace..."
                deleteDir()
                checkout scm
                echo "âœ… Code checked out"
            }
        }

        stage('Terraform Init') {
            steps {
                dir('Week6/bootstrap-backend') {
                    echo "ğŸš€ Initializing Terraform..."
                    sh 'terraform init -reconfigure -input=false -var-file=envs/dev/dev.tfvars'
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir('Week6/bootstrap-backend') {
                    echo "ğŸ” Validating Terraform configuration..."
                    sh 'terraform validate'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('Week6/bootstrap-backend') {
                    echo "ğŸ“‹ Running Terraform Plan..."
                    sh 'terraform plan -input=false -var-file=envs/dev/dev.tfvars -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('Week6/bootstrap-backend') {
                    echo "âš¡ Applying Terraform changes..."
                    sh 'terraform apply -input=false tfplan'
                }
            }
        }
    }

    post {
        always {
            echo "ğŸ”” Pipeline finished!"
        }
        success {
            echo "âœ… Pipeline succeeded!"
        }
        failure {
            echo "âŒ Pipeline failed!"
        }
    }
}
