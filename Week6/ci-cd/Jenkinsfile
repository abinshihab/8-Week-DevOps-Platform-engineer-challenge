pipeline {
    agent any

    environment {
        TF_VAR_FILE = "envs/dev/dev.tfvars"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                echo "ğŸ”„ Checking out code..."
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${WORKSPACE}/Week6") {
                    echo "ğŸš€ Initializing Terraform..."
                    sh "terraform init -reconfigure -input=false -var-file=${TF_VAR_FILE}"
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir("${WORKSPACE}/Week6") {
                    echo "ğŸ” Validating Terraform configuration..."
                    sh "terraform validate"
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir("${WORKSPACE}/Week6") {
                    echo "ğŸ“‹ Running Terraform Plan..."
                    sh "terraform plan -input=false -var-file=${TF_VAR_FILE} -out=tfplan"
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir("${WORKSPACE}/Week6") {
                    echo "âš¡ Applying Terraform Plan..."
                    sh "terraform apply -input=false tfplan"
                }
            }
        }
    }

    post {
        success {
            echo "âœ… Pipeline finished successfully!"
        }
        failure {
            echo "âŒ Pipeline failed!"
        }
    }
}
